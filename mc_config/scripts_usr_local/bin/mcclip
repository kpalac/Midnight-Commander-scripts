#!/bin/bash






. /usr/local/lib/mcglobals


SEL="$(/usr/bin/xclip -o)"


case "$1" in
    'browser')
        xdg-open "$SEL"
        MCF_ErrCheck "Error opening link"
    ;;        
    'google')
        SEL="${SEL// /+}"
        eval "xdg-open https://www.google.com/search?q=$SEL"
    ;;
    'ddg')
        SEL="${SEL// /+}"
        eval "xdg-open https://duckduckgo.com/?q=$SEL"

    ;;
    'dictionary')
        SEL="${SEL// /+}"
        eval "xdg-open https://www.thefreedictionary.com/$SEL"

    ;;
    'wiki')
        SEL="${SEL// /_}"
        eval "xdg-open https://en.wikipedia.org/wiki/$SEL"

    ;;
esac



